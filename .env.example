# ============================================================================
# ENVIRONMENT MODE
# ============================================================================
# LOCAL: Use RabbitMQ, Local Filesystem, HuggingFace (Fully Offline)
# AZURE: Use Azure Service Bus, Blob Storage, OpenAI (Fully Cloud)
ENVIRONMENT=LOCAL

# HYBRID MODE (Optional)
# Set to 'true' to use Azure Resources (Service Bus, Blob Storage) while running code locally
# Requires Service Principal credentials below.
USE_CLOUD_RESOURCES=false

# ============================================================================
# AUTHENTICATION (Required for AZURE or HYBRID mode)
# ============================================================================
# Service Principal Credentials (Recommended for Hybrid/Production)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id

# ============================================================================
# AZURE RESOURCES (Required for AZURE or HYBRID mode)
# ============================================================================
# Service Bus
SERVICEBUS_NAMESPACE=your-servicebus-namespace
# Example: if FQDN is 'mybus.servicebus.windows.net', use 'mybus'

# Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
BLOB_CONTAINER_NAME=raw-audio
RESULTS_CONTAINER_NAME=results

# OpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# ============================================================================
# LOCAL RESOURCES (Required for LOCAL mode only)
# ============================================================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
LOCAL_STORAGE_PATH=/tmp/speech-flow-storage
HF_SUMMARIZATION_MODEL=facebook/bart-large-cnn
HF_TRANSLATION_MODEL=Helsinki-NLP/opus-mt-{src}-{tgt}

# ============================================================================
# COMMON SETTINGS
# ============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/speechflow
ROUTER_QUEUE_NAME=job-events
LID_QUEUE_NAME=lid-jobs
WHISPER_QUEUE_NAME=whisper-jobs
AZURE_AI_QUEUE_NAME=azure-ai-jobs
MODEL_CACHE_DIR=/models
