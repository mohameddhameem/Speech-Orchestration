# Local Development Environment Configuration
# Copy this file to .env and uncomment the lines you need

# Set ENVIRONMENT to LOCAL to use RabbitMQ, local storage, and HuggingFace models
ENVIRONMENT=LOCAL

# RabbitMQ Configuration (used when ENVIRONMENT=LOCAL)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# Local Storage Configuration (used when ENVIRONMENT=LOCAL)
LOCAL_STORAGE_PATH=/tmp/speech-flow-storage

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/speechflow

# Queue Names (same for both local and Azure)
ROUTER_QUEUE_NAME=job-events
LID_QUEUE_NAME=lid-jobs
WHISPER_QUEUE_NAME=whisper-jobs
AZURE_AI_QUEUE_NAME=azure-ai-jobs

# HuggingFace Model Configuration (used when ENVIRONMENT=LOCAL)
HF_SUMMARIZATION_MODEL=facebook/bart-large-cnn
HF_TRANSLATION_MODEL=Helsinki-NLP/opus-mt-{src}-{tgt}

# Model Cache Directory
MODEL_CACHE_DIR=/models

# Azure Configuration (used when ENVIRONMENT=AZURE)
# Uncomment these when using Azure services
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...
# SERVICEBUS_CONNECTION_STRING=Endpoint=sb://...
# AZURE_OPENAI_ENDPOINT=https://my-resource.openai.azure.com/
# AZURE_OPENAI_KEY=your-key-here
# AZURE_OPENAI_DEPLOYMENT=gpt-4
# AZURE_OPENAI_INPUT_COST=0.01
# AZURE_OPENAI_OUTPUT_COST=0.03

# Blob Container Names
BLOB_CONTAINER_NAME=raw-audio
BLOB_CONTAINER_RESULTS=results
